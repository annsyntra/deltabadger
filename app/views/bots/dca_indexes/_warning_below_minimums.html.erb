<%= render 'layouts/modal/base' do %>
  <div class="modal">
    <%= button_tag type: 'button', class: 'modal__close', data: { action: 'modal--base#animateOutCloseAndCleanUp' } do %>
      <%= render partial: 'svg/24x24_close' %>
    <% end %>
    <div class="modal__header">
       <h1 class="modal__title"><%= t('bot.warning.title') %></h1>
    </div>

    <p><%= t('bot.dca_index.warning.intro', skipped_count: skipped_count, exchange_name: bot.exchange.name) %></p>

    <p><%= t('bot.warning.buffer_explanation', count: skipped_count) %></p>

    <p><%= t('bot.warning.general_note') %></p>
    <%= button_tag type: 'button', class: 'button button--success button--large', data: { action: 'modal--base#animateOutCloseAndCleanUp' } do %>
      <%= t('button.understand') %>
    <% end %>
  </div>
<% end %>
